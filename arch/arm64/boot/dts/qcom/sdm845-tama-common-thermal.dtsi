		thermal-sensors = <&pm8998_adc_tm 0x51>;
		thermal-governor = "step_wise";

		trips {
			backlight_critical: backlight-crit {
				temperature = <55000>;
				hysteresis = <1000>;
				type = "critical";
			};

			backlight_trip_hot: backlight-hot {
				temperature = <50000>;
				hysteresis = <500>;
				type = "passive";
			};

			backlight_trip0: backlight-trip0 {
				temperature = <49500>;
				hysteresis = <600>;
				type = "passive";
