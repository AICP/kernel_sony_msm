			};
			skin4_cpu7 {
				trip = <&cpu_ct_trip4>;
				cooling-device = <&CPU7 THERMAL_NO_LIMIT
							(THERMAL_MAX_LIMIT-18)>;
			};

			/* Throttle C1 only from FMAX to 2476.8MHz */
			skin5_cpu4 {
				trip = <&cpu_ct_trip5>;
				cooling-device = <&CPU4 THERMAL_NO_LIMIT
